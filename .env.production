# PostgreSQL Database (Docker service)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=users-db
POSTGRES_PORT=5432
POSTGRES_DB=banwee_db

# Application settings
DOMAIN=banwee.com
ENVIRONMENT=production

# SSL/TLS Settings
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/banwee.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/banwee.com/privkey.pem

# CORS allowed origins (production domains)
BACKEND_CORS_ORIGINS=https://banwee.com,https://www.banwee.com,https://banwee.netlify.app/,https://banwee.pages.dev/

# Security
SECRET_KEY=prod_secret_key_change_this_to_a_very_long_random_string_for_production_use_at_least_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe API Keys
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Optional external service keys (e.g., SMS, Firebase)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.yoursmsprovider.com/send
FIREBASE_CREDENTIALS_JSON=/usr/src/app/secrets/firebase.json

# SQLite fallback (rarely needed in prod)
SQLITE_DB_PATH=/tmp/db1.db

SMTP_HOSTNAME=smtp.gmail.com
SMTP_USER=youremail@gmail.com
SMTP_PASSWORD=your_app_password_or_actual_password

GOOGLE_SERVICE_ACCOUNT_TYPE=service_account
GOOGLE_SERVICE_ACCOUNT_PROJECT=your_project_id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=your_private_key
GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL=your_client_email
GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=your_client_id

TELEGRAM_BOT_TOKEN=